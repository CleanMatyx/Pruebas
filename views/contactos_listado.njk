{% extends "base.njk" %}

{% block titulo %}Contactos | Listado{% endblock %}

{% block contenido %}

    <h1>Listado de contactos</h1>

    <ul>
    {% for contacto in contactos %}
        <li class="mb-2">{{ contacto.nombre }} 
            <a href="/contactos/{{ contacto.id }}" class="btn btn-success">Ficha</a>

            <form action="/contactos/{{ contacto.id }}" method="post">
                <input type="hidden" name="_method" value="delete">
                <a href="/contactos/{{ contacto.id }}/edit" class="btn btn-danger">Borrar</a>
            </form>
        </li>
    {% endfor %}
</ul>

{% endblock %}
